<h3>Edit users Details</h3>
{{#if msg}}
<div class="alert">{{msg}}</div>
{{/if}}

{{#each rows}}
      <form action="/edituser/{{this.ID}}" method="post" autocomplete="off">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" value="{{this.NAME}}">
      </div>
       <div class="form-group">
        <label for="age">Age</label>
        <input type="text" name="age"value="{{this.AGE}}">
      </div>
       <div class="form-group">
        <label for="city">City</label>
        <input type="text" name="city" value="{{this.CITY}}">
      </div>
      <div class="form-group">
        <button class="btn" type="submit">Save Edit</button> 
        <a href="/"class="btn btn2">view all details</a>
      </div>

      </form>
{{/each}}